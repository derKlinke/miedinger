{
    "branches": ["main"],
    "repositoryUrl": "https://github.com/derKlinke/miedinger.git",
    "tagFormat": "v${version}",
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "npm version ${nextRelease.version} --no-git-tag-version",
                "publishCmd": "npm run build && npm publish --provenance",
                "successCmd": "if [ -n \"$MIEDINGER_APP_ID\" ] && [ -n \"$MIEDINGER_APP_PRIVATE_KEY\" ]; then node scripts/dispatch-sync.js; else echo \"skip dispatch (missing app credentials)\"; fi"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        "@semantic-release/github"
    ]
}
