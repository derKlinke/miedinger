[sqlfluff]
dialect = postgres
templater = jinja
max_line_length = 120
exclude_paths = supabase/**, **/supabase/**, scripts/**, **/migrations/**, **/.build/**, **/build/**, **/dist/**, **/out/**, **/bin/**, **/obj/**, **/target/**, **/DerivedData/**, **/CMakeFiles/**, **/cmake-build-*/**, **/bazel-*/**, **/buck-out/**, **/.gradle/**, **/.swiftpm/**, **/Pods/**, **/Carthage/**, **/node_modules/**, **/bower_components/**, **/.yarn/**, **/.pnpm-store/**, **/.npm/**, **/vendor/**, **/third_party/**, **/external/**, **/subprojects/**, **/.venv/**, **/venv/**, **/env/**, **/__pycache__/**, **/.tox/**, **/.mypy_cache/**, **/.pytest_cache/**, **/.ruff_cache/**, **/.cache/**, **/.ccls-cache/**, **/.dart_tool/**, **/_build/**, **/deps/**, **/.stack-work/**, **/dist-newstyle/**, **/.next/**, **/.nuxt/**, **/.svelte-kit/**, **/.astro/**, **/.vercel/**, **/.turbo/**, **/.parcel-cache/**, **/.vite/**, **/coverage/**

[sqlfluff:rules:layout.indent]
indent_unit = space
tab_space_size = 4

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower

[sqlfluff:rules:references.keywords]
# Allow specific keywords to be used as identifiers without quotes.
unquoted_identifiers = role, content, users

[sqlfluff:rules:references.quoting]
# Only quote identifiers when necessary.
preferred_quoted_identifiers = necessary
