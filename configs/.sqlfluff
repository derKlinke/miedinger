[sqlfluff]
dialect = postgres
templater = jinja
max_line_length = 120

[sqlfluff:rules:layout.indent]
indent_unit = space
tab_space_size = 4

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower

[sqlfluff:rules:references.keywords]
# Allow specific keywords to be used as identifiers without quotes.
unquoted_identifiers = role, content, users

[sqlfluff:rules:references.quoting]
# Only quote identifiers when necessary.
preferred_quoted_identifiers = necessary